<script>
export default {
  data() {
    return {
      email: '',
      firstName: '',
      lastName: '',
      tel: '',
    }
  },
  computed: {
    canSubmit() {
      return this.email.length > 0 && this.firstName.length > 0 && this.lastName.length > 0 && this.tel.length > 0
    }
  },
  methods: {
    async submit() {
      console.log('submit')
    }
  }
}
</script>
<template>
  <div class="form-container">
    <label for="email">Email</label>
    <input v-model="email" id="email" type="email" required />

    <label for="firstName">First Name</label>
    <input v-model="firstName" id="firstName" type="text" required />

    <label for="lastName">Last Name</label>
    <input v-model="lastName" id="lastName" type="text" required />

    <label for="tel">Phone Number</label>
    <input v-model="tel" id="tel" type="tel" required />

    <button type="submit" @click="submit" :disabled="!canSubmit">
    </button>
  </div>
</template>
